<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.PrivateMsgMapper">
    
    <resultMap type="PrivateMsg" id="PrivateMsgResult">
        <result property="id"    column="id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="userId"    column="user_id"    />
        <result property="toUserId"    column="to_user_id"    />
        <result property="content"    column="content"    />
        <result property="time"    column="time"    />
    </resultMap>

    <sql id="selectPrivateMsgVo">
        select id, parent_id, user_id, to_user_id, content, time from private_msg
    </sql>

    <select id="selectPrivateMsgList" parameterType="PrivateMsg" resultMap="PrivateMsgResult">
        <include refid="selectPrivateMsgVo"/>
        <where>  
            <if test="id != null "> and id = #{id}</if>
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="toUserId != null "> and to_user_id = #{toUserId}</if>
            <if test="content != null  and content != ''"> and content like concat('%', #{content}, '%')</if>
            <if test="time != null "> and time = #{time}</if>
        </where>
    </select>
    
    <select id="selectPrivateMsgById" parameterType="Long" resultMap="PrivateMsgResult">
        <include refid="selectPrivateMsgVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertPrivateMsg" parameterType="PrivateMsg">
        insert into private_msg
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="toUserId != null">to_user_id,</if>
            <if test="content != null">content,</if>
            <if test="time != null">time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="toUserId != null">#{toUserId},</if>
            <if test="content != null">#{content},</if>
            <if test="time != null">#{time},</if>
         </trim>
    </insert>

    <update id="updatePrivateMsg" parameterType="PrivateMsg">
        update private_msg
        <trim prefix="SET" suffixOverrides=",">
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="toUserId != null">to_user_id = #{toUserId},</if>
            <if test="content != null">content = #{content},</if>
            <if test="time != null">time = #{time},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deletePrivateMsgById" parameterType="Long">
        delete from private_msg where id = #{id}
    </delete>

    <delete id="deletePrivateMsgByIds" parameterType="String">
        delete from private_msg where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>